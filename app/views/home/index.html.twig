    {% for comment in comments %}
      <div class="comment">
        <h4>{{ comment.nickname ? comment.nickname : "Anonymous"}} @ {{ comment.created_at }}</h4>
        <p>{{ comment.comment }}</p>
      </div>
    {% endfor %}
  </body>
